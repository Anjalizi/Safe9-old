<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:id="@+id/iv_angan_patient_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_angan_patient_name"
            android:layout_toEndOf="@+id/iv_angan_patient_image"
            android:layout_marginTop="16dp"
            android:textSize="22sp"
            android:textAppearance="@style/Base.Widget.AppCompat.ActionBar.Solid"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_angan_patient_weeks"
            android:layout_toEndOf="@+id/iv_angan_patient_image"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:layout_below="@+id/tv_angan_patient_name"
            android:textAppearance="@style/Base.Widget.AppCompat.ActionBar.Solid"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_angan_patient_medical_label"
            android:layout_toEndOf="@+id/iv_angan_patient_image"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="@string/medical_records"
            android:layout_below="@+id/tv_angan_patient_weeks"
            android:textAppearance="@style/Base.Widget.AppCompat.ActionBar.Solid"
            android:layout_marginStart="16dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_visit_patient"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textSize="22sp"
            android:layout_below="@+id/tv_angan_patient_medical_label"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="@string/visit_patient"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
